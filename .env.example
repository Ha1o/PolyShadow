# PolyShadow Configuration
# Copy this file to .env and fill in your values

# Polygon RPC URL (Alchemy, Infura, QuickNode, etc.)
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# Polymarket API (optional, for higher rate limits)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Monitoring Settings (PRODUCTION - strict thresholds)
POLL_INTERVAL_SECONDS=30
MIN_TRADE_AMOUNT_USDC=10000
MAX_ODDS_FOR_CONTRARIAN=0.30
SUSPICIOUS_WALLET_NONCE_THRESHOLD=10
